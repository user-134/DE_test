            "registration_date": datetime(2023, 12, 9, 14, 0, 0)
        }
    },
    {
        "user_id": 132,
        "event_type": "signup",
        "event_time": datetime(2024, 1, 24, 18, 30, 0),
        "user_info": {
            "email": "user10@example.com",
            "registration_date": datetime(2023, 12, 10, 10, 0, 0)
        }
    }
]

# Заливка данных в коллекцию
collection.insert_many(data)

print("✅ Данные успешно загружены в MongoDB")

# Определяем пороговые даты
now = datetime.now()
t30, t14 = now - timedelta(days=30), now - timedelta(days=14)

# Собираем информацию по пользователям: последняя активность и дата регистрации
pipeline = [
    {
        "$group": {
            "_id": "$user_id",
            "last_event": {"$max": "$event_time"},
            "registration_date": {"$first": "$user_info.registration_date"}
        }
    }
]

users = list(collection.aggregate(pipeline))

# Определяем кого архивировать
users_to_archive = [
    u["_id"]
    for u in users
    if u["registration_date"] < t30 and u["last_event"] < t14
]

# Перенос в архив
if users_to_archive:
    docs = list(collection.find({"user_id": {"$in": users_to_archive}}))
    archived.insert_many(docs)
    collection.delete_many({"user_id": {"$in": users_to_archive}})

# Создаем отчет
report = {
    "date": now.strftime("%Y-%m-%d"),
    "archived_users_count": len(users_to_archive),
    "archived_user_ids": users_to_archive
}

os.makedirs("reports", exist_ok=True)
file = f"reports/archive_report: {report['date']}.json"
json.dump(report, open(file, "w", encoding="utf-8"), indent=4, ensure_ascii=False)

print("✅ Отчет успешно сохранен. Архивировано пользователей:", len(users_to_archive))
