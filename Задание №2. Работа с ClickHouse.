-- Таблица с сырыми логами событий. Храним логи 30 дней
CREATE TABLE user_events
(
	user_id UInt32,
	event_type String,
	points_spent UInt32,
	event_time DateTime
) 
ENGINE = MergeTree()
ORDER BY (event_time, user_id)
TTL event_time + INTERVAL 30 DAY;

-- Таблица с агрегатами. Храним агрегаты 180 дней, чтобы делать трендовый анализ
CREATE TABLE user_events_agg 
(
    event_date Date,
    event_type String,
    unique_users AggregateFunction(uniq, UInt32),
    total_spent AggregateFunction(sum, UInt32),
    actions_count AggregateFunction(count)
) 
ENGINE = AggregatingMergeTree()
ORDER BY (event_date, event_type)
TTL event_date + INTERVAL 180 DAY;

-- Материализованная вьюшка
CREATE MATERIALIZED VIEW user_events_mv
TO user_events_agg
AS
SELECT
    toDate(event_time) AS event_date,
    event_type,
    uniqState(user_id) AS unique_users,
    sumState(points_spent) AS total_spent,
    countState() AS actions_count
FROM user_events
GROUP BY event_date, event_type;
	
-- Подсчет Retention
WITH 
first_dates AS 
(
	SELECT 
		user_id,
		min(toDate(event_time)) AS first_date
	FROM user_events
	GROUP BY user_id
),

day_0 AS 
(
	SELECT 
		first_date,
		count() AS total_users_day_0
	FROM first_dates
	GROUP BY first_date
),

returned AS 
(
	SELECT 
		fd.first_date,
		count(DISTINCT ue.user_id) AS returned_in_7_days
	FROM user_events ue
	JOIN first_dates fd ON ue.user_id = fd.user_id
	WHERE toDate(ue.event_time) > fd.first_date
		AND toDate(ue.event_time) <= fd.first_date + INTERVAL 7 DAY
	GROUP BY fd.first_date
)

SELECT
	d.first_date,
	d.total_users_day_0,
	COALESCE(r.returned_in_7_days, 0) AS returned_in_7_days,
	ROUND(COALESCE(r.returned_in_7_days, 0) / NULLIF(d.total_users_day_0, 0) * 100 , 2) AS retention_7d_percent
FROM day_0 d
LEFT JOIN returned r ON r.first_date = d.first_date
ORDER BY d.first_date;

-- Вставка тестовых данных
-- События 10 дней назад
  VALUES
