(2, 'login', 0, now()),
(3, 'logout', 0, now()),
(6, 'signup', 0, now()),
(6, 'purchase', 100, now());

-- Быстрая аналитика по дням (через merge)
SELECT 
	event_date,
	event_type,
	uniqMerge(unique_users) AS unique_users,
	sumMerge(total_spent) AS total_spent,
	countMerge(actions_count) AS points_spent
FROM user_events_agg
GROUP BY event_type, event_date
ORDER BY event_date, event_type;
